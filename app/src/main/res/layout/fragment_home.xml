<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/miku"
    tools:context=".Home">

    <RelativeLayout
        android:id="@+id/homeTop"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        >
        
        <ImageView
            android:id="@+id/pp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/pp"
            />
        
        <ImageView
            android:id="@+id/welcome"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_toRightOf="@+id/pp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/welcome"
            />

        <ImageView
            android:id="@+id/parman"
            android:layout_width="108dp"
            android:layout_height="38dp"
            android:layout_toRightOf="@+id/pp"
            android:layout_below="@+id/welcome"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-7dp"
            android:src="@drawable/parman"
            />
        
        <ImageButton
            android:id="@+id/notification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/notification"
            />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/homeBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        >

        <ImageView
            android:id="@+id/homeButtonShape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/thirdshape"/>

        <RelativeLayout
            android:id="@+id/historyMenu"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            >

            <ImageView
                android:id="@+id/historyShape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fourthshape"
                />

            <ImageButton
                android:id="@+id/history"
                android:layout_width="79dp"
                android:layout_height="25dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/history"
                />

            <RelativeLayout
                android:id="@+id/historyBook"
                android:layout_width="330dp"
                android:layout_height="135dp"
                android:layout_below="@+id/history"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp">

                <RelativeLayout
                    android:id="@+id/book1"
                    android:layout_width="70dp"
                    android:layout_height="135dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    >

                    <ImageButton
                        android:id="@+id/picPerahuKertas"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/perahukertas"
                        />
                    
                    <TextView
                        android:id="@+id/textPerahuKertas"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/picPerahuKertas"
                        android:text="Perahu \nKertas"
                        android:maxLines="2"
                        android:fontFamily="sans-serif"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/book2"
                    android:layout_width="70dp"
                    android:layout_height="135dp"
                    android:layout_centerHorizontal="true"
                    >

                    <ImageButton
                        android:id="@+id/picPerahuKertas2"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/perahukertas"
                        />

                    <TextView
                        android:id="@+id/textPerahuKertas2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/picPerahuKertas2"
                        android:text="Perahu \nKertas"
                        android:maxLines="2"
                        android:fontFamily="sans-serif"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/book3"
                    android:layout_width="70dp"
                    android:layout_height="135dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    >

                    <ImageButton
                        android:id="@+id/picPerahuKertas3"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/perahukertas"
                        />

                    <TextView
                        android:id="@+id/textPerahuKertas3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/picPerahuKertas3"
                        android:text="Perahu \nKertas"
                        android:maxLines="2"
                        android:fontFamily="sans-serif"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/favoriteMenu"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/historyMenu"
            >

            <ImageView
                android:id="@+id/favoriteShape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fourthshape"
                />

            <ImageButton
                android:id="@+id/favorite"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/favorite"
                />

            <RelativeLayout
                android:id="@+id/favoriteBook"
                android:layout_width="330dp"
                android:layout_height="135dp"
                android:layout_below="@+id/favorite"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp">

                <RelativeLayout
                    android:id="@+id/book4"
                    android:layout_width="70dp"
                    android:layout_height="135dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    >

                    <ImageButton
                        android:id="@+id/picPerahuKertas4"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/perahukertas"
                        />

                    <TextView
                        android:id="@+id/textPerahuKertas4"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/picPerahuKertas4"
                        android:text="Perahu \nKertas"
                        android:maxLines="2"
                        android:fontFamily="sans-serif"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/book5"
                    android:layout_width="70dp"
                    android:layout_height="135dp"
                    android:layout_centerHorizontal="true"
                    >

                    <ImageButton
                        android:id="@+id/picPerahuKertas5"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/perahukertas"
                        />

                    <TextView
                        android:id="@+id/textPerahuKertas5"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/picPerahuKertas5"
                        android:text="Perahu \nKertas"
                        android:maxLines="2"
                        android:fontFamily="sans-serif"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/book6"
                    android:layout_width="70dp"
                    android:layout_height="135dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    >

                    <ImageButton
                        android:id="@+id/picPerahuKertas6"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/perahukertas"
                        />

                    <TextView
                        android:id="@+id/textPerahuKertas6"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/picPerahuKertas6"
                        android:text="Perahu \nKertas"
                        android:maxLines="2"
                        android:fontFamily="sans-serif"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>