<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout
            android:id="@+id/searchBar"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <SearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sixshape"
                android:queryHint="Seacrh"
                android:iconifiedByDefault="false"
                />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/recentSearch"
            android:layout_width="320dp"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/searchBar"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent"
                android:textSize="14dp"
                android:textColor="@color/black"
                />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/tagFilter"
            android:layout_width="320dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/recentSearch"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/tagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:textSize="14dp"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/genre1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tagText"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/sevenshape"
                android:text="Action"
                android:textSize="14dp"
                />

            <Button
                android:id="@+id/genre2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tagText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/sevenshape"
                android:text="Magic"
                android:textSize="14dp"
                />

            <Button
                android:id="@+id/genre3"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tagText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/sevenshape"
                android:text="Romance"
                android:textSize="14dp"
                />

        </RelativeLayout>
        
    </RelativeLayout>

</FrameLayout>