<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="110dp"
    android:layout_gravity="center"
    android:layout_marginBottom="20dp"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/bookItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/eightshape"
            android:background="@null"
            />
        
        <ImageView
            android:id="@+id/bookPic"
            android:layout_width="55dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:layout_toEndOf="@+id/bookPic"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/titleBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book_Name"
                android:textSize="24sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/authorBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleBook"
                android:text="Author"
                android:textSize="12sp"
                android:textColor="#414141"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:id="@+id/genreBar"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/eightshape">

                    <TextView
                        android:id="@+id/genreBook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Genre"
                        android:textSize="14sp"
                        android:textColor="#414141"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ratingBar"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/eightshape"
                    android:layout_toEndOf="@+id/genreBar"
                    android:layout_marginStart="15dp">
                    
                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/star"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        />


                    <TextView
                        android:id="@+id/ratingBook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_toEndOf="@+id/star"
                        android:layout_marginStart="5dp"
                        android:text="_._"
                        android:textSize="14sp"
                        android:textColor="#414141"
                        />

                </RelativeLayout>
                
                <ImageView
                    android:id="@+id/bookStock"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>