<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/bookDetailBar"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fifthshape"
                />

            <Button
                android:id="@+id/back"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/back"
                android:text="Book Details"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:background="@null"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/titleBook"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/nineshape"
            android:layout_below="@+id/bookDetailBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perahu Kertas"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/coverBook"
            android:layout_width="210dp"
            android:layout_height="300dp"
            android:layout_below="@+id/authorBook"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/perahukertas2"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/authorBook"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleBook"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/nineshape">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dewi Lestari"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ratingBookmark"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_below="@+id/coverBook"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
                android:id="@+id/rent"
                android:layout_width="90dp"
                android:layout_height="match_parent"

                >

                <Button
                    android:id="@+id/rentNow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tenshape"
                    android:text="Rent Now!"
                    android:textAllCaps="false"
                    android:gravity="center"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ratingBar"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@drawable/tenshape"
                android:layout_toRightOf="@+id/rent"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/star"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    />


                <TextView
                    android:id="@+id/ratingBook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_toEndOf="@+id/star"
                    android:layout_marginStart="5dp"
                    android:text="_._"
                    android:textSize="14sp"
                    android:textColor="#414141"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bookmarkBook"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_star_border_24"
                    android:background="@null"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/genreBook"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ratingBookmark"
            android:layout_marginTop="30dp"
            >

            <RelativeLayout
                android:id="@+id/genre1Book"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/fourthshape"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Romance"
                    android:textColor="@color/black"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/summaryBook"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/genreBook"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/nineshape">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="@string/lorem"
                android:textAlignment="textStart"
                android:justificationMode="inter_word"
                />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>