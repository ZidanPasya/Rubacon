<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout
            android:id="@+id/profileBar"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/profileShape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fifthshape"
                />
            
            <ImageView
                android:id="@+id/pp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:src="@drawable/pp"
                />

            <RelativeLayout
                android:id="@+id/textProfile"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/pp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                >

                <TextView
                    android:id="@+id/hiParman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi, Parman"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member"
                    android:layout_below="@+id/hiParman"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />

            </RelativeLayout>

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/completedBook"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_below="@+id/profileBar"
            android:layout_marginTop="40dp"
            >

            <TextView
                android:id="@+id/textComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Book"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:textColor="@color/black"
                />

            <RelativeLayout
                android:id="@+id/compBook"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_below="@+id/textComplete"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fifthshape"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="50dp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
            
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menuProfile"
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:layout_below="@+id/completedBook"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            >

            <Button
                android:id="@+id/settButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:drawableStart="@drawable/setting"
                android:text="Settings"
                android:textSize="16dp"
                android:background="@null"
                />

            <Button
                android:id="@+id/editProfButton"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_below="@+id/settButton"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/editprof"
                android:text="Edit Profile"
                android:textSize="16dp"
                android:background="@null"
                />

        </RelativeLayout>
        
    </RelativeLayout>

</FrameLayout>