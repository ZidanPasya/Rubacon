<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favorite">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="420dp"
                android:layout_height="1110dp"
                android:layout_marginTop="60dp">

                <RelativeLayout
                    android:id="@+id/leftBook"
                    android:layout_width="210dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/book1"
                        android:layout_width="105dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/picBook1"
                            android:layout_width="105dp"
                            android:layout_height="150dp"
                            android:src="@drawable/perahukertas"/>

                        <TextView
                            android:id="@+id/textPerahuKertas"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/picBook1"
                            android:text="Perahu \nKertas"
                            android:maxLines="2"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/book2"
                        android:layout_width="105dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/book1">

                        <ImageView
                            android:id="@+id/picBook2"
                            android:layout_width="105dp"
                            android:layout_height="150dp"
                            android:src="@drawable/perahukertas"/>

                        <TextView
                            android:id="@+id/textPerahuKertas2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/picBook2"
                            android:text="Perahu \nKertas"
                            android:maxLines="2"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/book3"
                        android:layout_width="105dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/book2">

                        <ImageView
                            android:id="@+id/picBook3"
                            android:layout_width="105dp"
                            android:layout_height="150dp"
                            android:src="@drawable/perahukertas"/>

                        <TextView
                            android:id="@+id/textPerahuKertas3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/picBook3"
                            android:text="Perahu \nKertas"
                            android:maxLines="2"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/book4"
                        android:layout_width="105dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/book3">

                        <ImageView
                            android:id="@+id/picBook4"
                            android:layout_width="105dp"
                            android:layout_height="150dp"
                            android:src="@drawable/perahukertas"/>

                        <TextView
                            android:id="@+id/textPerahuKertas4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/picBook4"
                            android:text="Perahu \nKertas"
                            android:maxLines="2"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rightBook"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/leftBook">

                    <RelativeLayout
                        android:id="@+id/book5"
                        android:layout_width="105dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/picBook5"
                            android:layout_width="105dp"
                            android:layout_height="150dp"
                            android:src="@drawable/perahukertas"/>

                        <TextView
                            android:id="@+id/textPerahuKertas5"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/picBook5"
                            android:text="Perahu \nKertas"
                            android:maxLines="2"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/book6"
                        android:layout_width="105dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/book5">

                        <ImageView
                            android:id="@+id/picBook6"
                            android:layout_width="105dp"
                            android:layout_height="150dp"
                            android:src="@drawable/perahukertas"/>

                        <TextView
                            android:id="@+id/textPerahuKertas6"
