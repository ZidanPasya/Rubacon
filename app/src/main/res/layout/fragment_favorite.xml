                            android:textSize="12dp"
                            android:textAlignment="center"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/book7"
                        android:layout_width="105dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/book6">

                        <ImageView
                            android:id="@+id/picBook7"
                            android:layout_width="105dp"
                            android:layout_height="150dp"
                            android:src="@drawable/perahukertas"/>

                        <TextView
                            android:id="@+id/textPerahuKertas7"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/picBook7"
                            android:text="Perahu \nKertas"
                            android:maxLines="2"
                            android:fontFamily="sans-serif"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/book8"
                        android:layout_width="105dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/book7">

                        <ImageView
                            android:id="@+id/picBook8"
                            android:layout_width="105dp"
                            android:layout_height="150dp"
                            android:src="@drawable/perahukertas"/>

                        <TextView
                            android:id="@+id/textPerahuKertas8"
